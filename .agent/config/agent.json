{
  "version": "1.0.0",
  "agent": {
    "name": "RelativityAgent",
    "type": "AGI",
    "model": {
      "primary": "gpt-4",
      "fallback": "gpt-3.5-turbo",
      "temperature": 0.7,
      "max_tokens": 4096
    },
    "capabilities": [
      "requirement_generation",
      "specification_design",
      "code_generation",
      "test_generation",
      "validation",
      "self_improvement"
    ],
    "autonomy_level": "full",
    "human_intervention": "optional"
  },
  "memory": {
    "short_term": {
      "enabled": true,
      "retention_period": "1_session",
      "max_size_mb": 100
    },
    "long_term": {
      "enabled": true,
      "retention_period": "permanent",
      "storage_type": "json"
    },
    "episodic": {
      "enabled": true,
      "max_episodes": 1000
    }
  },
  "reasoning": {
    "chain_of_thought": true,
    "record_alternatives": true,
    "decision_logging": true
  },
  "learning": {
    "enabled": true,
    "feedback_loop": true,
    "pattern_recognition": true,
    "auto_improvement": true
  }
}
