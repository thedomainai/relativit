{
  "version": "1.0.0",
  "orchestration": {
    "mode": "automated",
    "pipelines": [
      {
        "name": "user-story-to-requirement",
        "path": "workflows/pipelines/user-story-to-requirement.json",
        "enabled": true,
        "priority": 0,
        "description": "Process user stories into structured requirements"
      },
      {
        "name": "requirement-to-spec",
        "path": "workflows/pipelines/requirement-to-spec.json",
        "enabled": true,
        "priority": 1,
        "description": "Transform requirements into technical specifications"
      },
      {
        "name": "spec-to-code",
        "path": "workflows/pipelines/spec-to-code.json",
        "enabled": true,
        "priority": 2,
        "description": "Generate code from specifications"
      },
      {
        "name": "code-to-test",
        "path": "workflows/pipelines/code-to-test.json",
        "enabled": true,
        "priority": 3,
        "description": "Generate tests for code"
      },
      {
        "name": "validate-deploy",
        "path": "workflows/pipelines/validate-deploy.json",
        "enabled": false,
        "priority": 4,
        "description": "Validate and deploy to environments"
      }
    ],
    "coordination": {
      "parallel_execution": true,
      "max_concurrent_pipelines": 3,
      "dependency_resolution": "automatic"
    },
    "event_bus": {
      "enabled": true,
      "type": "in_memory",
      "publish_events": true,
      "subscribe_patterns": [
        "user_story.*",
        "requirement.*",
        "spec.*",
        "code.*",
        "test.*"
      ]
    },
    "scheduling": {
      "enabled": true,
      "check_interval_seconds": 10,
      "max_queue_size": 100
    }
  }
}
